<h3>{{viewTitle}}</h3>
<form action="/person" method="POST">
    <input type="hidden" name="_id" value="{{person._id}}">
    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" name="name" placeholder="Name" value={{person.name}}>
        <div class="text-danger">
            {{person.nameError}}
        </div>
    </div>

    <div class="form-group">
        <label>Age</label>
        <input type="number" class="form-control" name="age" max="120" placeholder="Age" value={{person.age}}>
        <div class="text-danger">
            {{person.ageError}}
        </div>
    </div>

    <div class="form-group">
        <label>Mobile</label>
        <input type="number" class="form-control" name="mobile" placeholder="Mobile" value={{person.mobile}}>
    </div>

    <fieldset class="form-group">
        <legend>Gender</legend>
        <div class="form-check">
            <label class="form-check-label">
                <input type="radio" class="form-check-input" name="gender" id="gender" value="male"
                    {{ isChecked 'male' person.gender }} checked="checked">
                Male
            </label>
        </div>
        <div class="form-check">
            <label class="form-check-label">
                <input type="radio" class="form-check-input" name="gender" id="gender" value="female"
                    {{ isChecked 'female' person.gender }}>
                Female
            </label>
        </div>
    </fieldset>

    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i>Submit</button>
        <a class="btn btn-info" href="/person/list"><i class="fa fa-list-alt"></i>View All</a>
    </div>

</form>